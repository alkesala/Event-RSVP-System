<h1><%= event ? 'Edit Event' : 'Create New Event' %></h1>

<form action="<%= event ? '/events/' + event.id + '/edit' : '/events/new' %>" method="POST">
    <label for="name">Event Name *</label>
    <input type="text" id="name" name="name" required value="<%= event ? event.name : '' %>">

    <label for="location">Location *</label>
    <input type="text" id="location" name="location" required value="<%= event ? event.location : '' %>">

    <label for="date">Date *</label>
    <input type="text" id="date" name="date" required placeholder="e.g., 2025-12-31" value="<%= event ? event.date : '' %>">

    <label for="capacity">Capacity (optional)</label>
    <input type="number" id="capacity" name="capacity" min="1" placeholder="Leave empty for unlimited" value="<%= event && event.capacity ? event.capacity : '' %>">

    <button type="submit" class="btn" style="margin-top: 20px;"><%= event ? 'Update Event' : 'Create Event' %></button>
    <a href="<%= event ? '/events/' + event.id : '/' %>" class="btn btn-secondary" style="margin-top: 20px;">Cancel</a>
</form>
